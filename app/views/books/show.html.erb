<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'users/info', user: @user %>
      <%= render 'books/post', book: @book %>
    </div>
    <div class="col-lg-8">
      <h2>Book detail</h2>
      <table class="table table-striped">
        <tr>
          <td>
            <%= link_to user_path(@user) do %>
             <%= attachment_image_tag @user, :profile_image, :size =>'60x60', fallback: "no_image.jpg" %>
            <% end %>
          </td>
          <td><%= link_to @book_show.title, book_path(@book_show) %></td>
          <td><%= @book_show.body %></td>
          <% if @user == current_user %>
          <td><%= link_to "Edit", edit_book_path(@book_show) %></td>
          <td><%= link_to "Destroy", book_path(@book_show), method: :delete, "data-confirm" => "本当に消しますか?" %></td>
          <% end %>
        </tr>
        <tr>
          <td><%= link_to @user.name, user_path(@user) %></td>
        </tr>
      </table>
    </div>
  </div>
</div>