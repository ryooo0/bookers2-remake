<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <% if user_signed_in? %>
        <div><%= link_to "Bookers、", root_path %></div>
        <div><%= link_to "Home、", user_path(current_user) %></div>
        <!--「.id」不要でOK?-->
        <div><%= link_to "Users、", users_path %></div>
        <div><%= link_to "Books、", books_path %></div>
        <div><%= link_to "Log out、", destroy_user_session_path, method: :delete %></div>
      <% else %>
        <div><%= link_to "Bookers、", root_path %></div>
        <div><%= link_to "Home、", root_path %></div>
        <div><%= link_to "About、", home_about_path %></div>
        <div><%= link_to "Sign up、", new_user_registration_path %></div>
        <div><%= link_to "Log in、", new_user_session_path %></div>
      <% end %>
    </header>

    <%= yield %>

    <footer>
      <p>CopyRight Infratop.inc</p>
    </footer>
  </body>
</html>
