<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'users/info', user: @user %>
      <%= render 'books/post', book: @book %>
    </div>
    <div class="col-lg-8">
      <h2>Users</h2>
      <table class="table table-striped">
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>
        <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to user_path(user) do %>
              <%= attachment_image_tag user, :profile_image, :size =>'80x80', fallback: "no_image.jpg" %>
            <% end %>
          </td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user) %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>